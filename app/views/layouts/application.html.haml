!!!
%html
  %head
    %title BigTuna Continuous Integration
    = stylesheet_link_tag "bootstrap.css"
    = stylesheet_link_tag "bootstrap-responsive.css"
    = stylesheet_link_tag "master.css"
    = javascript_include_tag :all
    = csrf_meta_tag
    %meta{:"http-equiv" => "Content-Type", :content => "text/html;charset=UTF-8"}
    %meta{:name => "keywords", :content => "keywords"}
    %meta{:name => "description", :content => "description"}
  %body{ :style => 'padding-top: 60px;' }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to("BigTuna", "http://bigtuna.appelier.com", :target => "_blank", :title => "BigTuna v#{BigTuna::VERSION}", :class => "brand")
          %span.brand.hint checked with
          %ul.nav
            %li
              = link_to("Projects overview", root_path)
            - unless BigTuna.read_only?
              %li
                = link_to("New Project", new_project_path)
            = yield :topbar


    .container
      = flash[:error]
      = flash[:notice]
      = yield

    = yield :sidebar
