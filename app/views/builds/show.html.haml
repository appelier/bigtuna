.page-header
  %h1
    = @build.project.name
    = "##{@build.build_no}"
    %small
      via
      %code= @build.project.vcs_source
      on
      %code= @build.project.vcs_branch
    - unless BigTuna.read_only?
      = link_to("Build now", build_project_path(@build.project), :class => "btn crm large success pull-right")

#build.row
  .span8
    #ajax-reload= @build.ajax_reload?

    = render :partial => 'build', :locals => { :build => @build }

    - unless @build.finished?
      - build_path_params = params[:stderr] ? {:format => :js, :stderr => 1} : {:format => :js}
      = ajaxReload(build_path(@build, build_path_params))
  .span4
    - unless BigTuna.read_only?
      %div.project-actions
        = link_to("Edit", edit_project_path(@build.project), :class => "btn small")
        = link_to("Duplicate", duplicate_project_path(@build.project), :class => "btn small")
        = link_to("Remove project", remove_project_path(@build.project), :class => "btn small danger")
    = render :partial => 'build_details'
    - if params[:stderr].nil?
      %li= link_to("Show stderr", build_path(@build, :stderr => 1), :class => "black_button")
    - else
      %li= link_to("Hide stderr", build_path(@build), :class => "black_button")

- content_for :topbar do
  %li= link_to("", feed_project_path(@project, :format => "atom"), :class => "rss")
