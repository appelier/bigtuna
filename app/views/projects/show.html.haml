.page-header
  %h1
    = @project.name
    - if @project.builds.any?
      = "##{@project.builds.last.build_no}"
    %small
      via
      %code= @project.vcs_source
      on
      %code= @project.vcs_branch
    - unless BigTuna.read_only?
      = link_to("Build now", build_project_path(@project), :class => "btn crm large success pull-right")

.row
  .span11
    - if @project.builds.any?
      = render :partial => 'builds/build', :locals => { :build => @project.builds.last }
    - else
      .hero-unit
        %h1= "No builds yet."
        %p
          Press the Build now button to start a build!
  .span5
    - unless BigTuna.read_only?
      %div.project-actions
        = link_to("Edit", edit_project_path(@project), :class => "btn small")
        = link_to("Duplicate", duplicate_project_path(@project), :class => "btn small")
        = link_to("Remove project", remove_project_path(@project), :class => "btn small danger")
    - if @project.builds.any?
      = render :partial => 'builds'
    = ajaxReload(project_path(@project, :format => :js))

- content_for :topbar do
  - unless BigTuna.read_only?
    %li= link_to("Edit", edit_project_path(@project), :class => "black_button")
  %li= link_to("", feed_project_path(@project, :format => "atom"), :class => "rss")
