%h3 Recent Builds
%ul.list-with-status.in-recent-builds
  - @builds.each do |build|
    %li{ :class => build.status }
      - if build.status == 'status_build_in_progress'
        %div.pulse
      = link_to("##{build.build_no}", build_path(build, :stderr => build.status == Build::STATUS_OK ? nil : 1))
      = format_stability(build.project.stability)
